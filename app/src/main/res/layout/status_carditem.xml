<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    >

    <RelativeLayout
        android:id="@+id/status_RecyclerViewDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp">

        <TextView
            android:id="@+id/status_TextView_CompanyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_TextView_CompanyTitle"
            android:text="Status : "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/status_TextView_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_TextView_CompanyTitle"
            android:layout_toRightOf="@id/text_status"
            android:text="status"
            android:textSize="18sp" />

        <Button
            android:id="@+id/status_button_unapply"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_status_unapply"
            android:text="unapply"
            android:visibility="gone"
            android:textSize="10dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>