<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size20dp"
    android:background="@color/colorBackground"
    tools:context=".Resource.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/login_imageView_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/custom_imagelogo"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size10dp"
            android:hint="@string/email_label"
            android:inputType="textEmailAddress"
            android:paddingRight="@dimen/size10dp"
            android:drawableLeft="@drawable/ic_username"
            android:background="@drawable/custom_edit_text"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size10dp"
                android:inputType="textPassword"
                android:hint="@string/password_label"
                android:layout_marginTop="@dimen/size10dp"
                android:drawableLeft="@drawable/ic_password"
                android:background="@drawable/custom_edit_text"
                />

            <Button
                android:id="@+id/login_button_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="-20dp"
                android:background="@drawable/custom_eyebutton" />

        </RelativeLayout>

        <TextView
            android:id="@+id/login_TextView_errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/login_btnlogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10dp"
            android:background="@drawable/custom_curvebutton"
            android:text="Sign In"
            android:layout_gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>