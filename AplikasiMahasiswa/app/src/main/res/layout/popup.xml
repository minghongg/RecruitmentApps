<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_background">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:paddingBottom="@dimen/size10dp">

    <TextView
        android:id="@+id/tv_jobName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Engineer"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/size20dp"/>

    <TextView
        android:id="@+id/tv_jobDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_jobName"
        android:text="Mengerti dan paham Bahasa python"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/size20dp"/>
    <TextView
        android:id="@+id/tv_jobQuota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kuota : 5"
        android:textColor="@color/black"
        android:layout_below="@id/tv_jobDesc"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="@dimen/size20dp"/>

    </RelativeLayout>

</ScrollView>